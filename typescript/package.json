{
  "name": "utss",
  "version": "2.0.0",
  "description": "Universal Trading Strategy Schema - TypeScript types and validation",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schema": {
      "import": "./schema/v2/strategy.schema.json",
      "require": "./schema/v2/strategy.schema.json"
    }
  },
  "files": [
    "dist",
    "schema"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "trading",
    "strategy",
    "schema",
    "backtesting",
    "quantitative-finance",
    "algorithmic-trading"
  ],
  "author": "obichan117",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obichan117/universal-trading-strategy-schema.git"
  },
  "homepage": "https://github.com/obichan117/universal-trading-strategy-schema#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "yaml": "^2.4.0"
  },
  "peerDependencies": {
    "zod": "^3.22.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  }
}
